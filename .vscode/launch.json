    "version": "0.2.0",
    "configurations": [
        {
            "name": "Api",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "api",
                "serve"
            ]
        },
        {
            "name": "Pending Messages Worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "worker",
                "pending-messages"
            ],
            "env": {
                "TEMPORAL_DEBUG": "true",
            }
        },
        {
            "name": "Send Message Worker",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "cwd": "${workspaceFolder}",
            "args": [
                "worker",
                "send-message"
            ],
            "env": {
                "TEMPORAL_DEBUG": "true",
            }
        }
    ]
}